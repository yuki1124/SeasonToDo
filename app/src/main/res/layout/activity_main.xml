<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Season"
            android:textAlignment="center"
            android:textSize="40sp" />

        <Button
            android:id="@+id/spring_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:onClick="springClick"
            android:text="Spring" />

        <Button
            android:id="@+id/summer_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:onClick="summerClick"
            android:text="summer" />

        <Button
            android:id="@+id/autumn_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:onClick="autumnClick"
            android:text="autumn" />

        <Button
            android:id="@+id/winter_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:onClick="winterClick"
            android:text="winter" />
    </LinearLayout>

</RelativeLayout>